                <% } else { %>
                    <a href="../../login"><h2 class="yazi-4">Login</h2></a>
                <% } %>
                        
       
    </div>
   

    <div class="logo" id="memo">
        <a href="homepage"><img src="/static/images/zyro-image (4).png" id="logo" width="100" height="100"></a>
    </div>


    <div class="yazilar">

        <div class="content2">
         
            <div class="menu-container">
                <i class="fa-solid fa-house"></i>
                <div class="menu-item">
                  <div class="menu-icon"></div>
                  <a href="psysupport"><h4 style="position: relative; left: 75%; margin-top: 12%;"> Psychological Support  </h4></a>
                </div>
                <% if (!isLoggedIn) { %>
                    <a href="../login"><h3 class="yazi-444">Login</h3></a>
                <% } %>
                <div class="search-icon"></div>
                <div class="more-icon"></div>
              </div>
                             
   

 
                        
                            
                     
                            <div class="location-section">
                                <button id="shareLocation">Share Location</button>

                                <table id="locationsTable">
                                    <thead>
                                        <tr>
                                            <th>Location</th>
                                            <th>Descriptions</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% locations.forEach(function(location) { %>
                                            <tr>
                                                <td><%= location.address %></td>
                                                <td>
                                                    <%= location.needs || "No comments yet" %> <!-- Display 'needs' data or a placeholder -->
                                                    <% if (isLoggedIn && currentUserId === location.userId) { %>
                                                        <form action="/api/add-comment/<%= location.id %>" method="post">
                                                            <textarea name="comment" placeholder="Add a comment..."></textarea>
                                                            <button type="submit" class="button">Submit</button>
                                                        </form>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (isLoggedIn && currentUserId === location.userId) { %>
                                                        <button onclick="deleteLocation('<%= location.id %>')" class="button">Delete</button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                    
                                </table>
                                <div class="pagination">
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <a href="/psysupport2?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                                    <% } %>
                                </div>
                            </div>
                            
                            
                                
                        
                           
                       
                                           
        
                        
</div>



      
